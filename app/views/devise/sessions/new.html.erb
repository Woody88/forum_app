<div class="row">
	<div class="col-lg-4">
	<div class="well">

	<h3>Log in</h3>
	<%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
		<div class="form-group">	
	  		<%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email' %>
	  	</div>
	  	<div class="form-group">
	  		<%= f.input :password, label: false, autofocus: true, label: false,placeholder: "password"%>
	  	</div>
	  	<div class="form-group">
	  		<%= f.check_box :remember_me %>
	  		<%= f.label :remember_me, required: false %>
	  	</div>

	  	<div class="form-group">
	  		<%= f.button :submit, :value => "Log in" %>
	  	</div>
	  	<hr>
	  <%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>
	</div>
	</div>
</div>

<%= render "devise/shared/links" %>
