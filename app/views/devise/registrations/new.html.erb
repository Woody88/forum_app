
<div class="row">
	<div class="col-lg-4">
	<div class="well">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
		<div class="form-group">	
	  		<%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email' %>
	  	</div>
	  	<div class="form-inputs">
	  		<%= f.input :password, label: false, required: true, autofocus: true, label: false,placeholder: "password", hint: ("#{@minimum_password_length} min chars" if @validatable) %>
	  		<%= f.input :password_confirmation, label: false, placeholder: 'Password Confirmation', required: true %>
	  	</div>
	  	<div class="form-group">
	  		<%= f.check_box :remember_me %>
	  		<%= f.label :remember_me, required: false %>
	  	</div>

	  	<div class="form-group">
	  		<%= f.button :submit, :value => "Sign up" %>
	  	</div>
	  	<hr>
	  <%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>
	</div>
	</div>
</div>


<%= render "devise/shared/links" %>