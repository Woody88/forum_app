<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
    
<h1>Listing Microposts</h1>
<%= link_to 'New Post', new_micropost_path, class: 'btn btn-primary' %>

<hr>
  <% @microposts.each do |micropost| %>
    <div class="panel panel-default">
     <div class="panel-heading"><%= micropost.user.email %></div>
      <div class="panel-body">
        <%= micropost.content %>
        </div>
      <div class="panel-footer">
          <div class="right">
            <em> <%= micropost.comments.count %>
           <%= link_to 'comments', micropost %></em>
            <% if current_user.id == micropost.user_id %>
              <%= link_to 'Edit', edit_micropost_path(micropost) %>
              <%= link_to 'Destroy',  micropost,  method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
      </div>
    </div>
    <% end %>

  <div class="col-lg-3"></div>
</div> 

